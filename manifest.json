{

  "manifest_version": 2,
  "name": "Irt Extension",
  "version": "1.0",

  "description": "Creating bug report with bug issue description and page screenshot",
  "icons": {
    "48": "icons/bugs-48.png"
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_scripts/modal.js" ,"content_scripts/irt-content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icons/bugs-32.png",
    "default_title": "Irt Extension",
    "default_popup": "popup/irt_popup.html"
  }

}